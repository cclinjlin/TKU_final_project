    <!--content-->
    <div id="portfolio" class="text-center" style="padding-top: 130px;background-color: #F0F6F6; ">
      <div class="container-center " >
        <!-- Overlay effect when opening sidebar on small screens -->
        <!-- !PAGE CONTENT! -->
        <div class="w3-main" style="margin-left:150px; margin-right:150px;">
          <!-- Header -->
          <header id="portfolio">
            <div class="w3-container">
              <div class="row">
                <div id="work">
                  <div class="about-text mar-text " style="    padding-left: 0px;">
                    <h1><i class="fas fa-id-card-alt"></i> 身分審核
                    </h1>
                    <div class="col custom-table-width">
                      <table cellspacing="1" class="">
                        <!--作品管理欄位名稱-->
                        <tr>
                          <th>User ID</th>
                          <th>用戶名稱</th>
                          <th>用戶姓名</th>
                          <th>帳號類型</th>
                          <th>證件號碼</th>
                          <th>出生日期</th>
                          <th>證件照</th>
                          <th>審核狀態</th>
                          <th>編輯</th>
                        </tr>
                        <!--作品管理欄位內容-->

                        <tr>
                          <%for(var key in data){%>
                          <td><%= data[key].userid  %></td>
                          <td><%= data[key].username  %></td>
                          <td><%= data[key].name  %></td>
                          <td><%= data[key].accounttype  %></td>
                          <td><%= data[key].idno  %></td>
                          <td><%= data[key].birthday  %></td>

                          <td>
                            <button class="project-button check-btn" data-toggle="modal"
                              data-target="#exampleModal<%= data[key].picid  %>">
                              查看
                            </button>

                            <div class="modal fade text-center modal-txt " id="exampleModal<%= data[key].picid  %>" tabindex="-1"
                              role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true" style="position:fixed">
                              <div class="modal-dialog" role="document">
                                <div class="modal-content">

                                  <div class="modal-header">
                                    <h5 class="modal-title" ><%= data[key].username  %>的證件照</h5>
                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                      <span aria-hidden="true">&times;</span>
                                    </button>
                                  </div>

                                  <div class="modal-body">
                                    <img src="http://localhost:3000/idpic/<%= data[key].idpic %>"
                  style="object-fit: cover;  width:500px; height:400px" class="profile_photo" class="w3-square">
                                  </div>

                                  <div class="modal-footer">
                                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                                  </div>
                                </div>
                              </div>
                            </div>

                          </td>
                          <td><%= data[key].verificationstatus  %></td>
                          <td><input type="submit" name="edit" value="編輯" class="form-submit" onclick="Edit('<%= data[key].userid  %>');" style="height:30px;" /></td>
                        </tr>
                        <script>

                        function Edit(userid){
                          window.location.href = "/profile_ver_edit?userid=" + userid;
                        }
                        </script>

                        <%}%>
                      </table>
                    </div>
                  </div>
                </div>
              </div>

            </div>
          </header>
          <br>

        </div>
      </div>
    </div>
